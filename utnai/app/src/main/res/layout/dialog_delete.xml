<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="@drawable/bg_white_stroke_red"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/dialog_title"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_delete"
            android:background="@drawable/bg_circle"
            android:gravity="center" />
        
        <TextView
            android:id="@+id/dialog_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:text="Do you want to delete?"
            android:textSize="14sp"
            android:textColor="@color/grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:weightSum="2">

            <TextView
                android:id="@+id/btnOk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="Yes"
                android:textColor="@color/grey_900"
                android:textSize="14sp"
                android:typeface="monospace"
                android:background="@drawable/bg_white_stroke_red_radia50"
                android:layout_weight="1"/>


            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="No"
                android:textColor="@color/grey_900"
                android:textSize="14sp"
                android:typeface="monospace"
                android:background="@drawable/bg_button_ok"
                android:layout_weight="1"/>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>